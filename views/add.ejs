<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 ">
  <h3 class="text-xl text-white">Create a new post</h3>
  <hr class="mt-3 opacity-10" />
  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="w-1/3 px-3 py-2 block text-white" type="file" name="postimage" id="" />
    <input
      class="w-1/3 px-3 py-2 block border-2 rounded-md mt-2"
      type="text"
      placeholder="Title"
      name="title"
    />
    <textarea
      class="w-1/3 h-60 px-3 py-2 block border-2 rounded-md mt-2"
      type="text"
      placeholder="Description"
      name="description"
    ></textarea>
    <input
      class="w-1/3 px-3 py-2 block rounded-md mt-2 bg-red-700 text-white"
      type="submit"
      value="Create Post"
    />
  </form>
</div>

