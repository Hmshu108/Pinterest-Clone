<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1471259521144-ce142aba2f9c?q=80&w=2034&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-zinc-100 flex items-center justify-center"
>
  <div class="w-[28vw] h-fit bg-white px-14 py-8 rounded-[30px]">
    <h1
      class="text-3xl mb-10 text-center font-semibold tracking-tighter capitalize leading-none"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-lg w-full px-3 py-2 mt-2"
        type="text"
        name="username"
        placeholder="Username"
      />

      <input
        class="border-2 rounded-lg w-full px-3 py-2 mt-2"
        type="text"
        name="name"
        placeholder="Full Name"
      />

      <input
        class="border-2 rounded-lg w-full px-3 py-2 mt-2"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
        class="border-2 rounded-lg w-full px-3 py-2 mt-2"
        type="number"
        name="number"
        placeholder="Contact Number"
      />
      <input
        class="border-2 rounded-lg w-full px-3 py-2 mt-2"
        type="password"
        name="password"
        id=""
        placeholder="Password"
      />
      <input
        class="border-2 rounded-full w-full px-3 py-2 bg-red-600 text-white rounded-full mt-6"
        type="submit"
        value="Create Account"
      />

      <p
        class="text-xs text-zinc-300 font-semibold mt-6 w-3/4 mx-auto text-center"
      >
        Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis
        saepe explicabo exercitationem placeat aperiam.
      </p>
    </form>

    <a
      class="inline-block mt-2 text-sm font-semibold text-zinc-500 text-center w-full"
      href="/"
      >Login to existing Account !</a
    >
  </div>
</div>

