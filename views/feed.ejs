<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(post){%>

    <div class="card w-32">
      <div class="w-full h-40 bg-zinc-500 rounded-lg overflow-hidden">
        <img src="/images/uploads/<%= post.image %>" class="w-full h-full object-cover" alt="" />
      </div>
      <h5 class="mt-2 text-sm"><%=post.title %></h5>
      <h6 class="text-xs opacity-80">@<%= user.username %></h6>
      <h6 class="text-xs opacity-80">@<%= post.user.username %></h6>
    </div>

    <% }) %>
  </div>
</div>

<% include ./partials/footer.ejs %>
